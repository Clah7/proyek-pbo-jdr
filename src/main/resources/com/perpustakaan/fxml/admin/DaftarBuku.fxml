<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="content_pane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.admin.DataBukuController">
    <children>
        <TextField fx:id="searchField" layoutX="25.0" layoutY="184.0" prefHeight="46.0" prefWidth="740.0" style="-fx-background-color: transparent; -fx-border-color: #ccc; -fx-border-radius: 24px;" />
        <TableView fx:id="tblData" fixedCellSize="0.0" layoutX="25.0" layoutY="255.0" prefHeight="292.0" prefWidth="750.0" stylesheets="@../../styling/style.css">
            <columns>
                <TableColumn fx:id="colIdBuku" prefWidth="75.0" text="Id Buku" />
                <TableColumn fx:id="colNamaBuku" prefWidth="75.0" text="Nama Buku" />
                <TableColumn fx:id="colPenulis" prefWidth="75.0" text="Penulis" />
                <TableColumn fx:id="colPenerbit" prefWidth="75.0" text="Penerbit" />
                <TableColumn fx:id="colTahunTerbit" prefWidth="75.0" text="Tahun Terbit" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        <Button fx:id="btnEditBuku" layoutX="186.0" layoutY="118.0" mnemonicParsing="false" onMouseClicked="#btnEditBukuOnClick" prefHeight="46.0" prefWidth="134.0" style="-fx-background-color: #1e1e1e; -fx-background-radius: 12px;" text="Edit" textFill="WHITE">
            <font>
                <Font name="Arial Bold" size="14.0" />
            </font>
        </Button>
      <Button fx:id="btnTambahBuku" layoutX="25.0" layoutY="118.0" mnemonicParsing="false" onMouseClicked="#btnTambahBukuOnClick" prefHeight="46.0" prefWidth="134.0" style="-fx-background-color: #1e1e1e; -fx-background-radius: 12px;" text="Tambah" textFill="WHITE">
         <font>
            <Font name="Arial Bold" size="14.0" />
         </font>
      </Button>
    </children>
</AnchorPane>
